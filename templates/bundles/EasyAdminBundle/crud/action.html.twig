{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{# @var action \EasyCorp\Bundle\EasyAdminBundle\Dto\ActionDto #}
{# @var entity \EasyCorp\Bundle\EasyAdminBundle\Dto\EntityDto #}
{% set current_controller = app.request.get('_controller')[0] %}
	{% if 'a' == action.htmlElement %}
		<a class="btn
			{% if action.label == 'Supprimer' %}
				btn-danger text-white
			{% elseif action.label == 'Voir' %}
				btn-primary
			{% elseif action.label == 'Éditer' %}
				btn-warning
			{% elseif action.label == 'Créer Vehicule' and  ('AttemptVehiculeCrudController' in current_controller or 'VehiculeRefusedCrudController' in current_controller ) %}
			  d-none
			{% endif %}
			{{ isIncludedInDropdown|default(false) ? 'dropdown-item' }} {{ action.cssClass }} " href="{{ action.linkUrl }}" {% for name, value in action.htmlAttributes %} {{ name }}="{{ value|e('html_attr') }}" {% endfor %}> {%- if action.icon %}
			<i class="action-icon {{ action.icon }}"></i>
		{% endif -%}
		{%- if action.label is not empty -%}
				{% if action.label == "Supprimer" and  'Attempt' in current_controller %}
					Refuser
				{% elseif action.label == "Éditer" and  'AttemptVehicule' in current_controller  %}
				    voir et activer
				{% elseif action.label == "Éditer" and  'Attempt' in current_controller  %}
				 Remplir et activer
				{% elseif action.label ==  "Créer User" %}
				  Crée un compte administrateur
				{% else %}
					{{ action.label }}
				{% endif %}
		{%- endif -%}
	</a>
{% elseif 'button' == action.htmlElement and action.label != "Créer et ajouter un nouvel élément" and action.label !=  "Sauvegarder et continuer l'édition" %}
{# action.label == "Créer et ajouter un nouvel élément" and  'Attempt' in current_controller #}
	<button class="{{ action.cssClass }} {% if action.label == 'Sauvegarder les modifications' and  'Attempt' in current_controller %} modalAction {% endif %}" {% for name, value in action.htmlAttributes %} {{ name }}="{{ value|e('html_attr') }}" {% endfor %}>
		<span class="btn-label">
			{%- if action.icon %}
				<i class="action-icon {{ action.icon }}"></i>
			{% endif -%}
			{%- if action.label is not empty -%}
				{% if action.label == "Sauvegarder les modifications" and  'Attempt' in current_controller %}
					Activer le compte
				{% else %}
					{{ action.label }}
				{% endif %}
			{%- endif -%}
		</span>
	</button>
{% endif %}

